{
	"name": "@bytewst/ai_shell",
	"description": "A CLI that converts natural language to shell commands.",
	"private": false,
	"types": "module",
	"version": "1.0.4",
	"dependencies": {
		"@clack/core": "latest",
		"@clack/prompts": "latest",
		"@dqbd/tiktoken": "^1.0.2",
		"@nexssp/os": "^2.0.35",
		"axios": "^1.3.5",
		"cleye": "^1.3.2",
		"clipboardy": "^2.3.0",
		"dedent": "^0.7.0",
		"execa": "^7.1.1",
		"i18next": "^22.4.15",
		"ini": "^4.0.0",
		"kolorist": "^1.7.0",
		"openai": "^3.2.1"
	},
	"repository": {
		"type": "git",
		"url": "https://code.byted.org/wangsongtao.heuwst/ai_shell"
	},
	"files": [
		"dist"
	],
	"module": "./dist/cli.mjs",
	"bin": {
		"ai-shell": "./dist/cli.mjs",
		"ai": "./dist/cli.mjs"
	},
	"scripts": {
		"start": "jiti ./src/cli.ts",
		"lint:fix": "prettier --write . && eslint --fix",
		"lint": "prettier --check . && eslint",
		"typecheck": "tsc",
		"build": "ncc build ./src/cli.ts --out ./dist",
		"pkg": "npm run build && pkg ./dist/index.js -o ./output/bin/ai-shell",
		"release:patch": "npm run build && npm version patch && npm run build && npm publish && git push --follow-tags"
	},
	"devDependencies": {
		"@types/dedent": "^0.7.0",
		"@types/ini": "^1.3.31",
		"@types/node": "^18.19.40",
		"@typescript-eslint/eslint-plugin": "^5.57.1",
		"@typescript-eslint/parser": "^5.57.1",
		"@vercel/ncc": "^0.38.1",
		"eslint": "^8.38.0",
		"eslint-plugin-unused-imports": "^2.0.0",
		"jiti": "^1.17.0",
		"pkgroll": "^1.11.1",
		"prettier": "^2.8.8",
		"rollup": "^2.79.1",
		"rollup-plugin-commonjs": "^10.1.0",
		"rollup-plugin-node-resolve": "^5.2.0",
		"rollup-plugin-typescript": "^1.0.1",
		"ts-loader": "^9.5.1",
		"tslib": "^2.6.3",
		"typescript": "^4.9.5"
	}
}